}
.banner-left>ul>li>a>i{
	float:right;
	font-size:20px;
	line-height:26px;
	color:#acbabd;
}
.banner-msg{
	display:none;
	position:absolute;
	width:968px;
	height:458px;
	padding-left:23px;
	top:0;
	left:234px;
	z-index:10;
	border:1px solid #e0e0e0;
	border-left:none;
	background-color:#ffffff;
}
.banner-msg>li{
	width:242px;
	height:76px;
	float:left;
}
.banner-msg>li>img{
	width:38px;
	height:43px;
	vertical-align:middle;
}
.banner-msg>li>span{
	font-size:12px;
	line-height:76px;
