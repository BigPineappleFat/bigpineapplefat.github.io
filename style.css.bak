}
.search-box-titl>a{
	font-size:13px;
	line-height:18px;
	color:#757575;
	background-color:#eeeeee;
}
.search-box-titl>a:hover{
	color:#ffffff;
	background-color:#ff6700;
}

/* 轮播图区域 */
.banner{
	position:relative;
	width:1226px;
	height:460px;
	margin:0 auto;
}
.banner>input{
	position:absolute;
	color:#333;
	z-index:9;
}
.banner>input:nth-of-type(5){
	bottom:25px;
	right:40px;
	}
.banner>input:nth-of-type(4){
	bottom:25px;
	right:60px;
}
.banner>input:nth-of-type(3){
	bottom:25px;
	right:80px;
}
.banner>input:nth-of-type(2){
	bottom:25px;
	right:100px;
}
.banner>input:nth-of-type(1){
	bottom:25px;
	right:120px;
}
.backgroundpic{
	position:absolute;
	width:1226px;
	height:460px;
	left:0;
	top:0;
}
.backgroundpic>img{
	width:1226px;
	height:460px;
	opacity:0;
	transition-duration:0.4s;
}
.banner1:checked ~.backgroundpic1>img,
.banner2:checked ~.backgroundpic2>img,
.banner3:checked ~.backgroundpic3>img,
.banner4:checked ~.backgroundpic4>img,
.banner5:checked ~.backgroundpic5>img{
	opacity:1
}
.banner>span{
	position:absolute;
	z-index:9;
	font-size:60px;
	color:rgba(200,200,200,0.6);
}
.banner>span:nth-of-type(1){
	top:200px;
	left:234px
}
.banner>span:nth-of-type(2){
	top:200px;
	right:0px
}
.banner>span:hover{
	background-color:rgba(0,0,0,0.3);
}

/* 轮播图左侧菜单 */
.banner-left{
	position:absolute;
	width:182px;
	height:450px;
	padding:5px 24px 5px 28px;
	top:0;
	left:0;
	z-index:10;
	background-color:rgba(0,0,0,0.5);
}
.banner-left>ul>li{
