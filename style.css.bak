
/* 引用iconfont */
@font-face{
  font-family: 'iconfont';
  src: url('icon/iconfont.eot');
  src: url('icon/iconfont.eot?#iefix') format('embedded-opentype'),
      url('icon/iconfont.woff2') format('woff2'),
      url('icon/iconfont.woff') format('woff'),
      url('icon/iconfont.ttf') format('truetype'),
      url('icon/iconfont.svg#iconfont') format('svg');
}
.iconfont{
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.iconfont{
	width: 1em;
	height: 1em;
	color:#b0b0b0;
	vertical-align:text-bottom;
	fill:currentColor;
	overflow: hidden;
}

.clearfix::after{
	content:'';
	display:block;
	clear:both;
}


/* 清除默认样式 */

body,div,ul,li,h1{
	margin:0;
}
ul{
	padding-left:0;
	list-style:none;
}
li{
	display:inline-block;
}
a{
	text-decoration: none;
}


/* 框架结构样式 */

header{/* 头部导航栏 */
	width:100%;
	min-width:1226px;
	height:40px;
	background-color:#333333;
}
.top-nav{
	position:relative;
}
.top-search{
	position:relative;
}
.search{/* 搜索框区域 */
	width:1226px;
	height:55px;
	margin:22px auto 23px;
}
.banner{/* 轮播图区域 */
	width:1226px;
	height:460px;
	margin:0 auto 14px;
	background-color:#ff5722;
}
.main-menu{/* 主要广告导航区域 */
	width:1226px;
	height:170px;
	margin:0 auto 26px;
	background-color:#ff5722;
}
.top-product{/* 横幅广告 */
	width:1226px;
	height:120px;
	margin:0 auto 47px;
	background-color:#ffb800;
}
.main>.top-product{
	margin:42px auto 46px;
}
.main{/* 商品区域 */
	width:100%;
	min-width:1226px;
	padding:20px 0 60px;
	background-color:#f5f5f5;
}
.main>section{/* 商品区域单个内容块 */
	width:1226px;
	margin:0 auto 42px;
	background-color:#01aaed;
}
.pro-title{/* 商品文字区域 */
	width:1226px;
	height:60px;
	background-color:#ff5722;
}
.main .pro-list{/* 商品内容列表 */
	width:1226px;
	margin:0 auto;
	background-color:#ffb800;
}
.main-product>.pro-list{/* 商品列表区域 */
	height:614px;
}
.recommand-product>.pro-list{/* 推荐商品内容列表 */
	height:300px;
}
.hot-product>.pro-list{/* 热评商品内容列表 */
	height:415px;
}
.app-product>.pro-list{/* app内容列表 */
	height:420px;
}
.video-product>.pro-list{/* 视频内容列表 */
	height:285px;
}
footer{
	width:1226px;
	height:504px;
	margin:0 auto;
	background-color:#01aaed;
}
.new-product-nav{
	width:66px;
	height:22px;
	margin:0 auto;
	font-size:12px;
	line-height:22px;
	text-align:center;
	color:#ff812c;
	border:1px solid #ff6700;
}
.new-product{
	width:66px;
	height:22px;
	margin:0 auto;
	font-size:12px;
	line-height:22px;
	text-align:center;
	color:#ffffff;
	background-color:#83c44e;
}
.sale{
	width:66px;
	height:22px;
	margin:0 auto;
	font-size:12px;
	line-height:22px;
	text-align:center;
	color:#ffffff;
	background-color:#e53935;
}


/* 顶部导航栏模块 */

.top-nav{/* 顶部导航栏 */
	width:1226px;
	margin:0 auto;
}
.top-nav li{/* 顶部导航栏 li标签 */
	float:left;
}
.top-nav a{/* 顶部导航栏 a标签 */
	font-size:12px;
	line-height:40px;
	color:#b0b0b0;
}
.top-nav span{
	margin:0.5em;
	float:left;
}
.leftnav{
	float:left;
}
.right-nav{
	float:right;
}
.download{
	display:none;
	position:absolute;	
	width:124px;
	height:150px;
	top:32px;
	left:548px;	
	z-index:10;
	background-color:#fff;
	box-shadow:0px 1px 5px #aaa;
}
.download>em{
	position:absolute;
	display:block;
	width:0;
	height:0;
	left:55px;
	top:-20px;
	margin:0 auto;
	border:10px solid transparent;
	border-bottom:10px solid #fff;
}
.download>img{
	display:block;
	width:86px;
	margin:20px auto 16px;
}
.download>p{
	font-size:14px;
	text-align:center;
	line-height:14px;
}
.top-nav li:hover a{
	color:#ffffff;
}
.top-nav li:hover .download{
	display:block;
}
.top-nav-cart{
	position:relative;
}
.top-nav-cart-msg{
	overflow:hidden;
	position:absolute;
	width:316px;
	height:0;
	top:40px;
	right:0;
	z-index:10;
	margin:0 auto;
	transition:0.5s;
	background-color:#fff;
	box-shadow:0px 1px 5px #aaa;
}
.top-nav-cart-msg>p{
	text-align:center;
	line-height:52px;
}
.top-nav-cart:hover i{
	color:#ff6700;
}
.top-nav .right-nav .top-nav-cart:hover a{
	color:#ff6700;
}
.top-nav-cart:hover div{
	height:98px;
}

/* 顶部搜索框模块 */
